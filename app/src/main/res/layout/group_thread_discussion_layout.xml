<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/thread_border"
    android:orientation="vertical"
    android:theme="@style/ThemeOverlay.AppCompat.Dark">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/thread_discussion_number"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:paddingLeft="8dp"
            android:paddingTop="8dp"
            android:text="#1"
            android:textColor="#ffff00"
            android:textSize="15dp" />

        <TextView
            android:id="@+id/thread_discussion_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:paddingLeft="8dp"
            android:paddingTop="8dp"
            android:text="Michael Fong"
            android:textColor="#22ffff"
            android:textSize="15dp" />

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

        </androidx.constraintlayout.widget.ConstraintLayout>
    </LinearLayout>

    <TextView
        android:id="@+id/thread_discussion_content"

        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingLeft="8dp"
        android:paddingTop="8dp"
        android:paddingBottom="12dp"
        android:textColor="#ffffff"
        android:text="Testing"/>

</LinearLayout>